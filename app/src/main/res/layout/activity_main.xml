<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

<!--    <com.google.android.material.appbar.MaterialToolbar-->
<!--        android:id="@+id/appBarAb"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->

<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:gravity="center"

        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"

            android:text="@string/app_name"
            android:textSize="40sp"
            android:textStyle="italic|bold"

            android:theme="@style/ThemeOverlay.Material3.AutoCompleteTextView"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createCompanyBtn"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_margin="20sp"

            android:text="Create Company"

            app:icon="@drawable/create_company_icon"
            app:iconSize="30sp"

            android:theme="@style/OutlinedIconTextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loadCompanyBtn"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:layout_margin="20sp"

            android:text="Load Company"

            app:icon="@drawable/load_company_icon"
            app:iconSize="30sp"

            android:theme="@style/FilledIconTextButton"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>